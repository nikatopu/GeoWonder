// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Uses the DATABASE_URL from your .env file
  url      = env("DATABASE_URL")
  // Enables Prisma's Data Proxy for serverless environments like Vercel
  directUrl = env("DATABASE_URL") 
}

model Article {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  content   String   // The markdown content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("articles")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String // We store the hash, not the password
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model GalleryImage {
  id        String   @id @default(cuid())
  url       String   // URL of the image on Vercel Blob
  altText   String
  createdAt DateTime @default(now())

  @@map("gallery_images")
}